image: {{ .input_docker_image }}
 
deploy-production:
  stage: deploy
  environment: production 
  variables:
    DATABRICKS_HOST: {{template `databricks_prod_workspace_host` .}}
    DATABRICKS_CLIENT_ID: "${SP_CLIENT_ID}"
    DATABRICKS_CLIENT_SECRET: "${SP_CLIENT_SECRET}"
  script:
    - cd {{template `project_name_alphanumeric_underscore` .}}
    - databricks bundle validate -t {{ .input_prod_catalog_name }}  
    - databricks bundle deploy -t {{ .input_prod_catalog_name }}  
  rules:
    - when: on_success #Â mandatory to ensure this job can be called by parent on merge request
